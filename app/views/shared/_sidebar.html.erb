<div id="sidebar-wrapper">
  <ul class="sidebar-nav">
    <li class="sidebar-brand">
      <a href="#">
          Projects
      </a>
    </li>
    <li>
      <a onclick="toggleForm()" href="#" id="add-project-btn">Add Project</a>
    </li>

    <div id="myDIV" style="display: none">
      <%= render partial: 'projects/form', locals: { project: Project.new }, id: 'add-project-form' %>
    </div>

    <% @projects.each do |project| %>

    <li>
      <%= link_to project.title, project_tasks_path(project) %>
    </li>
    <% end %>

    <li>
      <% if current_user.present?%>
        <%= link_to(
          "Log Out",
          destroy_user_session_path,
          method: :delete, class: 'fixed-bottom'
        ) %>
      <% end %>
    </li>
  </ul>
</div>
